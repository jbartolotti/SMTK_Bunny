<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/experimentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable = "true"
    android:focusable= "true"
    tools:context=".Experiment">

    <!-- GAME ELEMENTS -->
    <ImageView
        android:id="@+id/bg_grass"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src="@drawable/bg_grass"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bunny_white"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/bunny_transp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="810dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/bunny_brown"
        android:layout_width="300px"
        android:layout_height="300px"
        android:visibility="invisible"
        app:srcCompat="@drawable/bunny_brown"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="810dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/carrot_default"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginEnd="808dp"
        android:layout_marginRight="808dp"
        android:src="@drawable/carrot_transp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/path_straight_1600"
        android:layout_width="1920px"
        android:layout_height="500px"
        android:visibility="invisible"
        app:srcCompat="@drawable/path_straight_1600"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="300dp" />

    <ImageView
        android:id="@+id/path_curved_1600"
        android:layout_width="1920px"
        android:layout_height="500px"
        android:visibility="invisible"
        app:srcCompat="@drawable/path_curved_1600"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="190dp" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1520px"
        android:layout_height="800px"
        app:srcCompat="@drawable/guide_curve_toright"
        tools:layout_editor_absoluteX="200px"
        tools:layout_editor_absoluteY="200px"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/beginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textSize="36dp"
        tools:layout_editor_absoluteX="420dp"
        tools:layout_editor_absoluteY="420dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>