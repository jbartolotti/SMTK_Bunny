<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/experimentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable = "true"
    android:focusable= "true"
    tools:context=".Experiment">

    <!-- GAME ELEMENTS -->
    <ImageView
        android:id="@+id/bg_grass"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src="@drawable/bg_grass"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bunny_white"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/bunny_transp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="810dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/bunny_brown"
        android:layout_width="300px"
        android:layout_height="300px"
        android:visibility="invisible"
        app:srcCompat="@drawable/bunny_brown"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="810dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/carrot_default"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginEnd="808dp"
        android:layout_marginRight="808dp"
        android:src="@drawable/carrot_transp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/path_straight_1600"
        android:layout_width="1920px"
        android:layout_height="500px"
        android:visibility="invisible"
        app:srcCompat="@drawable/path_straight_1600"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="300dp" />

    <ImageView
        android:id="@+id/path_curved_1600"
        android:layout_width="1920px"
        android:layout_height="500px"
        android:visibility="invisible"
        app:srcCompat="@drawable/path_curved_1600"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="190dp" />



    <ImageView
        android:id="@+id/guide_curve_toright"
        android:layout_width="1520px"
        android:layout_height="800px"
        app:srcCompat="@drawable/guide_curve_toright"
        android:layout_marginStart="200px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="200px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <ImageView
        android:id="@+id/guide_curve_toleft"
        android:layout_width="1520px"
        android:layout_height="800px"
        app:srcCompat="@drawable/guide_curve_toleft"
        android:layout_marginStart="200px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="200px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/guide_line_toright"
        android:layout_width="1520px"
        android:layout_height="800px"
        app:srcCompat="@drawable/guide_line_toright"
        android:layout_marginStart="200px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="200px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/guide_line_toleft"
        android:layout_width="1520px"
        android:layout_height="800px"
        app:srcCompat="@drawable/guide_line_toleft"
        android:layout_marginStart="200px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="200px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/beginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textSize="36dp"
        android:layout_marginBottom="20px"
        app:layout_constraintEnd_toEndOf="@+id/guide_curve_toright"
        app:layout_constraintStart_toStartOf="@+id/guide_curve_toright"
        app:layout_constraintBottom_toBottomOf="@+id/guide_curve_toright" />
    <Button
        android:id="@+id/quitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END AND CLOSE"
        android:textSize="36dp"
        android:layout_marginBottom="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/nextBlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="36dp"
        android:layout_marginBottom="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/bunnyCheerSingle"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/bunny_cheer"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/thankyoucheer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Thank you for feeding us!"
        android:textSize="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop = "30px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom = "100px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bunnyCheer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer" />

        <ImageView
            android:id="@+id/bunnyCheer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>