<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clickable = "true"
    tools:context=".OldMainActivity">


    <!-- MAIN MENU -->
    <TextView
        android:id="@+id/inputIDlabel"
        android:layout_width="330dp"
        android:layout_height="64dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="250dp"
        android:layout_weight="1"
        android:gravity = "center"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="ENTER ID NUMBER"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editTextID"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="00dp"
        android:layout_marginLeft="556dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd = "556dp"
        android:ems="10"
        android:inputType="phone"
        android:digits="0123456789."
        android:hint="0000"
        android:imeOptions="actionDone"
        android:textColor="@android:color/black"
        android:textSize="48dp"
        android:background = "@android:color/white"
        app:layout_constraintStart_toEndOf="@id/inputIDlabel"
        app:layout_constraintTop_toTopOf="@+id/inputIDlabel" />


    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginStart = "400dp"
        android:text="START"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/pathEnableToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart = "100dp"
        android:text="DIRT PATH:OFF"
        android:textSize="36dp"
        android:textOff = "DIRT PATH: OFF"
        android:textOn = "DIRT PATH: ON"
        app:layout_constraintStart_toEndOf="@id/startBtn"
        app:layout_constraintTop_toTopOf="@+id/startBtn" />

    <ToggleButton
        android:id="@+id/debugEnableToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart = "20dp"
        android:text="DEBUG"
        android:textSize="36dp"
        android:textOff = "DEBUG"
        android:textOn = "NORMAL"
        android:background="#000000"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/debugToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart = "20dp"
        android:visibility="invisible"
        android:text="DEBUG"
        android:textSize="36dp"
        android:textOff = "DEBUG"
        android:textOn = "NORMAL"
        app:layout_constraintStart_toEndOf="@id/startBtn"
        app:layout_constraintTop_toTopOf="@id/startBtn" />

    <ToggleButton
        android:id="@+id/chartToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="CHART"
        android:textOff="SHOW CHART"
        android:textOn="HIDE CHART"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@id/debugToggle"
        app:layout_constraintStart_toStartOf="@id/debugToggle"
        />

    <Button
        android:id="@+id/clearChartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart = "20dp"
        android:text="CLEAR"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="@id/debugToggle"
        app:layout_constraintTop_toBottomOf="@id/chartToggle" />

    <Button
        android:id="@+id/closeAppBtn"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop = "00dp"
        android:layout_marginStart = "400dp"
        android:layout_marginEnd="00dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:textColor="@android:color/transparent"
        android:textSize="36dp"
        android:text="QUIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- GAME ELEMENTS -->
    <ImageView
        android:id="@+id/bg_grass"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src="@drawable/bg_grass"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/path_000"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src = "@drawable/path0_000"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/path_300"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src = "@drawable/path0_300"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/path_600"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src = "@drawable/path0_600"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/path_900"
        android:layout_width="1920px"
        android:layout_height="1200px"
        android:src = "@drawable/path0_900"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/bunny_white"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src = "@drawable/bunny_transp"
        android:visibility = "invisible" />

    <ImageView
        android:id="@+id/bunny_brown"
        android:layout_width="300px"
        android:layout_height="300px"
        android:visibility="invisible"
        app:srcCompat="@drawable/bunny2" />

    <ImageView
        android:id="@+id/carrot_default"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src = "@drawable/carrot_transp"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/path_1600_300"
        android:layout_width="1920px"
        android:layout_height="600px"
        android:visibility="invisible"
        app:srcCompat="@drawable/path_1600_300" />

    <ImageView
        android:id="@+id/curve_1600_300"
        android:layout_width="1920px"
        android:layout_height="600px"
        android:visibility="invisible"
        app:srcCompat="@drawable/curve_1600_300" />

    <ImageView
        android:id="@+id/bunnyCheerSingle"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/bunny_cheer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bunnyCheer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
        <ImageView
            android:id="@+id/bunnyCheer5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bunny_cheer"/>
    </LinearLayout>

    <!-- DEBUG INTERFACE -->
    <TextView
        android:id="@+id/acceltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:layout_marginStart = "100dp"
        android:layout_marginTop = "500dp"
        android:textSize = "24dp"
        android:textColor = "@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/gyrotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:layout_marginStart = "100dp"
        android:layout_marginTop = "100dp"
        android:textSize = "24dp"
        android:textColor = "@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/acceltext" />
    <TextView
        android:id="@+id/acceldat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_marginStart = "20dp"
        android:layout_marginTop = "0dp"
        android:textSize = "24dp"
        android:textColor = "@android:color/white"
        app:layout_constraintStart_toEndOf="@id/acceltext"
        app:layout_constraintTop_toTopOf="@id/acceltext" />
    <TextView
        android:id="@+id/gyrodat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_marginStart = "00dp"
        android:layout_marginTop = "0dp"
        android:textSize = "24dp"
        android:textColor = "@android:color/white"
        app:layout_constraintStart_toStartOf="@id/acceldat"
        app:layout_constraintTop_toTopOf="@id/gyrotext" />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/TouchChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/AccelChart1"
        android:layout_width="match_parent"
        android:layout_height="600px"
        app:layout_constraintTop_toBottomOf="@id/TouchChart" />



</androidx.constraintlayout.widget.ConstraintLayout>